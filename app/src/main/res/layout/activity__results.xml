<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#ffedd1"
    tools:context=".ResultsActivity"
    >



    <Button
        app:backgroundTint="#23af23"
        android:id="@+id/fab"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:text="Scan"
        />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="61dp"
        android:layout_height="51dp"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/_recyclelogo"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_below="@id/logo"
        tools:ignore="ContentDescription"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="91dp"
        android:layout_marginTop="61dp"
        app:srcCompat="@drawable/_recyclelogo" />

    <TextView
        android:id="@+id/itemName"
        android:layout_alignEnd="@id/fab"
        android:layout_width="wrap_content"
        android:layout_below="@id/itemPic"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/item"

        />

    <TextView
        android:id="@+id/recycleType"
        android:layout_alignEnd="@id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemName"
        android:layout_gravity="center_horizontal"
        android:text="@string/recycle"
        />

    <TextView
        android:id="@+id/recycleBin"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/fab"
        android:layout_below="@id/recycleType"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/bin"
        />
    <TextView
        android:id="@+id/recycleDescription"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/fab"
        android:layout_below="@id/recycleBin"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/desc"
        />





</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffedd1"
    tools:context=".CalenderActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#23af23"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        app:backgroundTint="#23af23"
        app:srcCompat="@drawable/backarrow"
        tools:srcCompat="@drawable/backarrow" />



    <ImageView
        android:id="@+id/logo"
        android:layout_width="61dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/_recyclelogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/mySchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="-60dp"
        android:text="My Schedule"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"

        android:layout_toStartOf="@+id/mySchedule"
        android:text="Garbage Date: " />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"

        android:layout_toEndOf="@id/textView2"
        android:layout_marginLeft="20dp"
        android:text="Tuesday " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mySchedule"
        android:layout_alignParentTop="true"
        android:layout_marginTop="226dp"
        android:text="Blue Bin: Plastic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="193dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="Grey Bin: Cardboard" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mySchedule"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="126dp"
        android:text="Green Bin: Compost" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignBottom="@+id/textView3"
        app:srcCompat="@drawable/bluebin" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignBottom="@+id/textView4"
        app:srcCompat="@drawable/greybin" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignBottom="@+id/textView5"
        app:srcCompat="@drawable/greenbin" />


</RelativeLayout>
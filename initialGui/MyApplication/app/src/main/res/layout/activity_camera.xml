<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffedd1"
    >

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#23af23"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

</android.support.design.widget.AppBarLayout>

<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    app:backgroundTint="#23af23"
    app:srcCompat="@drawable/backarrow"
    tools:srcCompat="@drawable/backarrow" />


<ImageView
    android:id="@+id/logo"
    android:layout_width="61dp"
    android:layout_height="51dp"
    app:srcCompat="@drawable/_recyclelogo"
    android:layout_centerHorizontal="true"/>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:layout_marginTop="75dp"
        app:srcCompat="@drawable/_recyclelogo"
        android:layout_gravity="center_horizontal"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Item:"

        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/recycleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Recycle Type: "
        />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/recycleBin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Bin"
        />

</LinearLayout>



</RelativeLayout>


